<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_margin="5dp"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:padding="3dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center">
            
            <TextView
                android:id="@+id/textview_driver_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"/>
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/ic_user"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_driver_fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text=""/>

            <TextView
                android:id="@+id/textview_driver_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text=""/>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="8">
                
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="15dp" 
                    android:layout_weight="1"
                    android:src="@drawable/ic_up_arrow"/>
                
                <TextView
                    android:id="@+id/textview_up_shocks"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="10dp"
                    android:text="12"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:padding="2dp"/>
                
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="15dp" 
                    android:layout_weight="1"
                    android:src="@drawable/ic_down_arrow"/>

                <TextView
                    android:id="@+id/textview_down_shocks"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="10dp"
                    android:text="12"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:padding="2dp"/>
                
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="15dp" 
                    android:layout_weight="1"
                    android:src="@drawable/ic_left_arrow"/>

                <TextView
                    android:id="@+id/textview_left_shocks"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="10dp"
                    android:text="12"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:padding="2dp"/>
                
                
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="15dp" 
                    android:layout_weight="1"
                    android:src="@drawable/ic_right_arrow"/>

                <TextView
                    android:id="@+id/textview_right_shocks"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="10dp"
                    android:text="12"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:padding="2dp"/>
                
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/textview_total_shocks"
                android:gravity="center"/>

            <TextView
                android:id="@+id/textview_total_shocks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12"
                android:textSize="20dp"
                android:textColor="@color/darkBlue"
                android:textStyle="bold"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/darkBlue"></LinearLayout>-->

</android.support.v7.widget.CardView>